<div class="container my-3">
<!----------------------バリデーションエラー表示---------------------->
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<!-------------------------------------------------------------------->
  <div class="row">


    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>name</th>
          <td><strong><%= current_user.name %></strong></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><strong><%= current_user.introduction %></strong></td>
        </tr>
      </table>
      <%= link_to edit_user_path(current_user.id) ,class: "btn btn-outline-secondary btn-block" do %>
        <span><i class="fas fa-user-cog"></i></span>
      <% end %>

      <h2>New book</h2>
      <%= form_with model:@book, method: :post do |f| %>
        <p>Title</p>
        <%= f.text_field:title, class:"form-control" %>
        <p>Opinion</p>
        <%= f.text_area:body, class:"form-control" %>
        <br>
        <%= f.submit 'Create Book',class: "btn btn-success"%>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1" >
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="col-md-1">     </th>
            <th class="col-md-3">Title</th>
            <th class="col-md-6">opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
　　      <tr>
　    　    <td><%= link_to user_path(book.user.id), class: "text-decoration-none" do %>
　　              <%= image_tag book.user.get_profile_image(90,90) %>
　　            <% end %>
　　        </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>


  </div>
</div>
