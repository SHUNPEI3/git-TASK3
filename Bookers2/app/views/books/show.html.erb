<!----------------------フラッシュメッセージ表示---------------------->
<div>
  <%= flash[:notice] %>
</div>
<!-------------------------------------------------------------------->
<div class="container my-3">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/userinfo', user: @userinfo, book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1" >
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <p><%= @book.user.name %></P>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book.id) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            <% if @book.user.id == current_user.id %>
              <%= link_to "Edit", edit_book_path(@book.id) ,class: "btn btn-success btn-sm" %>
            <% end %>
          </td>
          <td>
            <% if @book.user.id == current_user.id %>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか" ,class: "btn btn-danger btn-sm" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

  </div>
</div>
