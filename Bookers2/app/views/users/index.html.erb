<div class="container my-3">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/userinfo', user: @userinfo, book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1" >
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th class="col-md-3">image</th>
          <th class="col-md-3">name</th>
          <th class="col-md-2">    </th>
        </tr>
        <% @users.each do |user| %>
　　    <tr>
　        <td><%= image_tag user.get_profile_image(90,90) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>
