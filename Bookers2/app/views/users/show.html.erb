<!----------------------フラッシュメッセージ表示---------------------->
<div>
  <%= flash[:notice] %>
</div>
<!-------------------------------------------------------------------->

<div class="container my-3">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/userinfo', user: @userinfo, book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1" >
      <h2>Books</h2>
      <table class="table">
        <tr>
          <th class="col-md-1">     </th>
          <th class="col-md-3">Title</th>
          <th class="col-md-8">opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user.id), class: "text-decoration-none" do %>
                <%= image_tag @user.get_profile_image(90,90) %>
              <% end %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>
